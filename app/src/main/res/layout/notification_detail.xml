<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="notification"
            type="id.ac.ui.cs.mobileprogramming.rizkhiph.notifime.ui.notification.model.Notification"/>
        <variable name="callback"
            type="id.ac.ui.cs.mobileprogramming.rizkhiph.notifime.ui.notification.activity.NotificationClickCallback"/>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:onClick="@{() ->  callback.onClick(notification)}"
        android:orientation="horizontal"
        android:padding="8dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{notification.title}"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>